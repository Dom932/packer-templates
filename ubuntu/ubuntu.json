{
    "variables": {
        "version": "1.0",

        "vm_name": "",
        "iso_url": "",
        "iso_checksum_type": "",
        "iso_checksum": "",        
        "os_edition": "",
        "disk_size": "",
        "boot_command_prefix": "",
        "seed_path": "",
        "vcenter_username" : "",
        "vcenter_password" : "",
        "vsphere_cluster" : "",
        "vsphere_folder" : "",
        "vsphere_disk_size" : "",
        "vsphere_datastore" : "",
        "vsphere_network" : "",
        
        "cpus": "2",
        "memory": "2048",
        "disk_adapter_type": "scsi",

        "vsphere_insecure_connection" : "true",
        "vsphere_disk_controller_type" : "lsilogic-sas"
        
    },

    "builders": [
        {
            "type": "vmware-iso",

            "vm_name": "{{ user `vm_name` }}-{{isotime \"2006-01-02\"}}",

            "guest_os_type": "ubuntu-64",
            "headless": false,

            "http_directory": "../../../../templates",

            "iso_checksum": "{{ user `iso_checksum_type` }}:{{ user `iso_checksum` }}",
            "iso_url": "{{ user `iso_url` }}",

            "cpus": "{{ user `cpus` }}",
            "memory": "{{ user `memory` }}",
            "disk_adapter_type": "{{ user `disk_adapter_type` }}",
            "disk_size": "{{ user `disk_size` }}",
            "disk_type_id": 0,

            "ssh_username": "packer",
            "ssh_password": "packer",
            "ssh_wait_timeout": "3600s",

            "shutdown_command": "sudo shutdown -P now",

            "boot_wait": "5s",
            "boot_command": [
                "{{ user `boot_command_prefix` }}",
                "http://{{ .HTTPIP }}:{{ .HTTPPort }}/{{ user `seed_path` }}",
                "<enter>"
            ]
        },
        {
            "type": "vsphere-iso",

            "vcenter_server": "{{user `vcenter_server`}}",
            "username": "{{user `vcenter_username`}}",
            "password": "{{user `vcenter_password`}}",
            "insecure_connection": "{{user `vsphere_insecure_connection`}}",
            "cluster": "{{user `vsphere_cluster`}}",
            "folder": "{{user `vsphere_folder`}}",

            "vm_name": "{{ user `vm_name` }}-{{isotime \"2006-01-02\"}}",

            "guest_os_type": "ubuntu64Guest",
            
            "iso_checksum": "{{ user `iso_checksum_type` }}:{{ user `iso_checksum` }}",
            "iso_url": "{{ user `iso_url` }}",

            "cpus": "{{ user `cpus` }}",
            "memory": "{{ user `memory` }}",
            "disk_controller_type":  "{{ user `vsphere_disk_controller_type` }}",
            "disk_size": "{{ user `disk_size` }}",
            "datastore": "{{user `vsphere_datastore`}}",
            "disk_thin_provisioned": true,
  
            "network_card": "vmxnet3",
            "network": "{{user `vsphere_network`}}",

            "ssh_username": "packer",
            "ssh_password": "packer",
            "ssh_wait_timeout": "3600s",

            "shutdown_command": "sudo shutdown -P now",

            "floppy_files": [
                "../../../../templates/"
              ],
      
              "boot_wait": "5s",
              "boot_command": [
                "{{ user `boot_command_prefix` }}",
                "/media/{{ user `seed_path` }}",
                "<enter>"
              ]
        },
        {
            "type": "virtualbox-iso",

            "vm_name": "{{ user `vm_name` }}-{{isotime \"2006-01-02\"}}",

            "guest_os_type": "Ubuntu_64",
            "headless": false,

            "http_directory": "../../../../templates",

            "iso_checksum": "{{ user `iso_checksum_type` }}:{{ user `iso_checksum` }}",
            "iso_url": "{{ user `iso_url` }}",

            "cpus": "{{ user `cpus` }}",
            "memory": "{{ user `memory` }}",
            
            "disk_size": "{{ user `disk_size` }}",

            "ssh_username": "packer",
            "ssh_password": "packer",
            "ssh_wait_timeout": "3600s",
            
            "shutdown_command": "sudo shutdown -P now",

            "boot_wait": "5s",
            "boot_command": [
                "{{ user `boot_command_prefix` }}",
                "http://{{ .HTTPIP }}:{{ .HTTPPort }}/{{ user `seed_path` }}",
                "<enter>"
            ]
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "expect_disconnect": true,
            "environment_vars": [
                "DEBIAN_FRONTEND=noninteractive",
                "OS_EDITION={{ user `os_edition` }}"
            ],
            "scripts": [
                "../../../../scripts/base_config.sh",
                "../../../../scripts/system_update.sh",
                "../../../../scripts/virtualbox.sh",
                "../../../../scripts/vmware.sh",
                "../../../../scripts/cleanup.sh"
          ]
        }
    ]
}
